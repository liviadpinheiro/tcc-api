generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Deck {
  id          String   @id @default(uuid())
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  card        Card[]
}

model Card {
  id        String   @id @default(uuid())
  name      String
  number    Int
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deck      Deck     @relation(fields: [deck_id], references: [id])
  deck_id   String
  notes     Notes[]
}

model Notes {
  id                     String  @id @default(uuid())
  meaning                String?
  keywords               String?
  elements_meaning       String?
  specific_meaning       String?
  related_theme          String?
  additional_observation String?
  card                   Card    @relation(fields: [card_id], references: [id])
  card_id                String
  user                   User    @relation(fields: [user_id], references: [id])
  user_id                String
}

model User {
  id        String   @id @default(uuid())
  fullName  String
  cpf       String
  password  String
  email     String   @unique
  birthdate DateTime
  notes     Notes[]
}

model Testimonials {
  id        String @id @default(uuid())
  depoiment String
  person    String
  image     String
  state     String
}
